<% layout('./layout/boilerplate') %>

<h2>Saved</h2>

<div class="row"style="padding:50px 0px">
    <% for (let product of products){   %>
      <div class="col-lg-3 mb-3">
        <div class="card shadow-lg mx-auto car" style="width: 18rem;">
         <div>
           <img src="<%=product.img%>" class="card-img-top imgd" alt="...">
           
             <h5 class="card-title mt-3 ml-5">Dr. <%=product.name%></h5>
             <h6 class="card-text"><%=product.price%></h6>
           </div>
             <div class="card-body">
             <p class="card-text">Experience: <%=product.desc%></p>
             <a href="/doctors/<%=product.id%>" class="btn my-1 mx-1">Doctor's details</a>
             <a href="/book/<%=product.id%>" class="btn my-1 mx-1">Book Now</a>
             <form action="/doctors/saved/<%=product.id%>?_method=delete" method="post"><button class="btn btn-danger">Remove from Saved</button></form>
           </div>
         </div> 
       </div>
        <%}%>
</div>
  
    
  
  